{{!log 'sante' this}}
<div class="sante-grid {{#if femme}}bck_f{{else}}bck_h{{/if}}">
    <div class="encart-malus">
          <img src={{images.encart_malus}} title="Malus dû aux blessures" />
            <div class="text-malus">{{malus}}</div>
    </div>
    <div class="sante-tete">
        <label>Tête</label>
        <div class="circles-container">
            {{#times (nbCasesSante actor 'tete')}}
                <input type="checkbox" class="case-sante circle-checkbox {{#if (seuilSante ../actor 'tete' @index)}}filled{{/if}} {{#if (estCocheeSante ../actor 'tete' @index)}}checked{{/if}}" id="circle{{@index}}" data-index="{{@index}}" data-zone="tete"/>
            {{/times}}
        </div>
        <div class="sante-protection">
            <label for="protection-tete-input">Protection</label>
            {{prot.tete}}
        </div>  
    </div>
    <div class="sante-bras-droit">
        <label>Bras droit</label>
        <div class="circles-container">    
             {{#times (nbCasesSante actor 'brasDroit')}}                
