                    {{prot.jambeGauche}}
        </div>
    </div>
    {{#if editable}}
        <div class="sequelles-editable">
            <label> Séquelles</label>
            {{editor sequellesHtml target="system.sequelles" button=true engine="prosemirror" editable=true}}
        </div>
      <div class="change-sexe">
        <span class="middle-size"><a class="sheet-change-sexe" title="{{localize 'CDM.TOOLTIP.changesexe'}}">
          {{#if femme}}<i class="fas fa-female"></i>{{else}}<i class="fas fa-male"></i>{{/if}}</a>
        </span>
      </div>
    {{else}}
        <div class="sequelles">
            <label> Séquelles</label>
            {{editor sequellesHtml target="system.sequelles" button=true engine="prosemirror" editable=false}}
        </div>
    {{/if}}
</div>