        <label>Jambe droite</label>
        <div class="circles-container">         
            {{#times (nbCasesSante actor 'jambeDroite')}} 
                <input type="checkbox" class="case-sante circle-checkbox {{#if (seuilSante ../actor 'jambeDroite' @index)}}filled{{/if}} {{#if (estCocheeSante ../actor 'jambeDroite' @index)}}checked{{/if}}" id="circle{{@index}}" data-index="{{@index}}" data-zone="jambeDroite"/>
            {{/times}}      
        </div>
        <div class="sante-protection">
            <label for="protection-jambe-droite-input">Protection</label>
                {{prot.jambeDroite}}
        </div>
    </div>
    <div class="sante-jambe-gauche">
        <label>Jambe gauche</label>
        <div class="circles-container">      
            {{#times (nbCasesSante actor 'jambeGauche')}}
                <input type="checkbox" class="case-sante circle-checkbox {{#if (seuilSante ../actor 'jambeGauche' @index)}}filled{{/if}} {{#if (estCocheeSante ../actor 'jambeGauche' @index)}}checked{{/if}}" id="circle{{@index}}" data-index="{{@index}}" data-zone="jambeGauche"/>
