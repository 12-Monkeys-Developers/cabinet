            {{/times}}          
        </div>
        <div class="sante-protection">
            <label for="protection-bras-gauche-input">Protection</label>
                {{prot.brasGauche}}
        </div>
    </div>
    <div class="sante-torse">
        <label>Torse</label>
        <div class="circles-container">    
            {{#times (nbCasesSante actor 'torse')}}    
                <input type="checkbox" class="case-sante circle-checkbox {{#if (seuilSante ../actor 'torse' @index)}}filled{{/if}} {{#if (estCocheeSante ../actor 'torse' @index)}}checked{{/if}}" id="circle{{@index}}" data-index="{{@index}}" data-zone="torse"/>
            {{/times}}           
        </div>
        <div class="sante-protection">
            <label for="protection-torse-input">Protection</label>
                {{prot.torse}}
        </div>        
    </div>
