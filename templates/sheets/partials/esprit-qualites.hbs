<div class="grid-tab-qualites">
  <div class="grid-arbre-qualites">
      <div class="qualite-group intellect-group" data-field="intellect">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='intellect' gauche="1"}}
      </div>
      <div class="qualite-group courage-group" data-field="courage">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='courage' }}
      </div>
      <div class="qualite-group sensibilite-group" data-field="sensibilite">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='sensibilite' }}
      </div>
      <div class="qualite-group autorite-group" data-field="autorite">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='autorite' gauche="1" }}
      </div>
      <div class="qualite-group ouverture-group" data-field="ouverture">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='ouverture' }}
      </div>
      <div class="qualite-group savoir-group" data-field="savoir">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='savoir' gauche="1" }}
      </div>
      <div class="qualite-group serenite-group" data-field="serenite">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='serenite' }}
      </div>
      <div class="qualite-group charisme-group" data-field="charisme">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='charisme' }}
      </div>
      <div class="qualite-group attention-group" data-field="attention">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='attention' }}
      </div>
      <div class="qualite-group coordination-group" data-field="coordination">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualite-group.hbs" qualite='coordination' }}
      </div>
  </div>
  <div class="col-droite-qualites">
    <div class="titre2" style="margin: 20px 330px 10px 0px;">Aspects</div>
    <div class="aspects-grid">
      <div class="aspects-ligne" style="grid-row: 1; grid-column: 1;">
      <span class="nom-aspect">NESHAMA</span><span class="aspect-desc">(RAISON)</span>
        </div>
        <div class="aspectcircle" style="grid-row: 1; grid-column: 2;">
        {{#if editable}}
          <input type="number" name="system.aspects.neshama.valeur" value="{{system.aspects.neshama.valeur}}" />
        {{else}}
          +{{system.aspects.neshama.valeur}}
        {{/if}}
      </div>
      <div class="aspects-ligne" style="grid-row: 2; grid-column: 1;">
        <span class="nom-aspect">ROUA'H</span><span class="aspect-desc">(INTUITION)</span>
        </div>
        <div class="aspectcircle" style="grid-row: 2; grid-column: 2;">
          {{#if editable}}
             <input type="number" name="system.aspects.rouah.valeur" value="{{system.aspects.rouah.valeur}}" />
          {{else}}
            +{{system.aspects.rouah.valeur}}
          {{/if}}
      </div>
      <div class="aspects-ligne" style="grid-row: 3; grid-column: 1;">
        <span class="nom-aspect">NEFESH</span><span class="aspect-desc">(ACTION)</span>
        </div>
        <div class="aspectcircle" style="grid-row: 3; grid-column: 2;">
          {{#if editable}}
            <input type="number" name="system.aspects.nefesh.valeur" value="{{system.aspects.nefesh.valeur}}" />
          {{else}}
            +{{system.aspects.nefesh.valeur}}
          {{/if}}
        </div>
        <div class="encart-exp" style="grid-row: 1 / 4; grid-column: 3;">
          <div class="text-exp">
          {{#if editable}}
            <input type="number" name="system.experience.actuelle" value="{{system.experience.actuelle}}" />
            &nbsp;/&nbsp;
            <input type="number" name="system.experience.totale" value="{{system.experience.totale}}" />
          {{else}}
            {{system.experience.actuelle}}&nbsp;/&nbsp;{{system.experience.totale}}
          {{/if}}
          </div>
        </div>
    </div>
    <div class="titre2" style="margin:20px 0px 10px 0px;">Acquis
      {{#if editable}}&nbsp;&nbsp;
        <a class="item-create" data-type="acquis" title="{{localize 'CDM.TOOLTIP.ajouterAcquis'}}">
        <i class="fa-solid fa-books-medical"></i></a>
      {{/if}}
    </div>
    <div class="acquis-col">
    {{#each acquis as |acquisElement id|}}<div>
      <details>
      <summary class="ligne-acquis">
        <div class="acquis-nom">{{acquisElement.name}}</div><div class="acquis-valeur">+{{acquisElement.system.valeur}}</div>
        <div class="icon-group">
          {{#if ../editable}}
          <a class="item-control item-edit" data-field="{{acquisElement._id}}" data-tooltip="Modifier"><i
                  class="fas fa-cog"></i></a>
          <a class="item-control item-delete" data-field="{{acquisElement._id}}" data-tooltip="Supprimer"><i
                  class="fas fa-trash"></i></a>
          {{/if}}
        </div>
      </summary>
          {{{acquisElement.system.descriptionhtml}}}
      </details></div>
    {{/each}}
    </div>
    <div class="medaillon_cab cabinet-contextmenu">
      {{#if jardin}}
        <img src="/modules/cabinet-livredebase/assets/images/aspect_systeme/esprit_jardin.webp" title="Clic droit pour menu du cabinet" />
      {{else}}
        {{#if comedien}}
          <img src="/modules/cabinet-livredebase/assets/images/aspect_systeme/esprit_comedien.webp" title="Clic droit pour menu du cabinet" />
        {{else}}
          <img src="/modules/cabinet-livredebase/assets/images/aspect_systeme/esprit_cabinet.webp" title="Clic droit pour menu du cabinet" />
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>