<form class="{{cssClass}}" autocomplete="off">

  {{log "esprit" this}}
  {{! Main Content }}
  <section class="sheet-body">
    <header class="esprit-header">
      <div class="titre_feuille">Esprit</div>
      <div class="charname"><input name="name" type="text" value="{{actor.name}}" /></div>
      <div class="esprit-portrait">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
      </div>
      {{! Sheet Navigation }}
      <nav class="sheet-navigation tabs" data-group="primary">
        <a class="choix_tab" data-tab="qualites">Qualités et Défauts</a>
      </nav>
    </header>

    {{! Qualites Tab }}
    <div class="tab tab-qualites flexcol" data-group="primary" data-tab="qualites">
        {{> "systems/cabinet/templates/partials/actor/qualites.hbs"}}
    </div>

  </section>

</form>