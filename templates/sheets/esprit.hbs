<form class="{{cssClass}} {{backgroundColor}}" autocomplete="off">

  {{!log "esprit" this}}
  {{! Main Content }}
  <section class="sheet-body esprit-sheet">
    <header class="esprit-header" style='background: {{getBackgroundCss actor}}'>
      <div class="titre_feuille">Esprit&nbsp;&nbsp;
        <span class="middle-size"><a class="sheet-change-lock" title="{{localize 'CDM.TOOLTIP.unlockSheet'}}">
          {{#if editable}}<i class="fas fa-lock-open"></i>{{else}}<i class="fas fa-lock" ></i>{{/if}}</a>
        </span>
      </div>
      <div class="charname">
        {{#if editable}}<input name="name" type="text" value="{{actor.name}}" />{{else}}{{actor.name}}{{/if}}</div>
      <div class="perisprit-bloc">
        <div class="perisprit-label">Perisprit</div>
        <div class="perisprit-value">
            <input type="text" name="system.perisprit" value="{{system.perisprit}}" />
        </div>
      </div>
      <div class="esprit-portrait">
      {{#if editable}}
          <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
      {{else if (ne actor.img "icons/svg/mystery-man.svg")}}
            <img src="{{actor.img}}" title="{{actor.name}}" />
      {{/if}}
      </div>
      {{! Sheet Navigation }}
      <nav class="sheet-navigation tabs" data-group="primary">
        <a class="choix_tab" data-tab="qualites">Qualités</a>
        <a class="choix_tab" data-tab="concept">Concept</a>
        <a class="choix_tab" data-tab="pouvoirs">Pouvoirs</a>
        <a class="choix_tab" data-tab="actions">Actions</a>
        <a class="choix_tab" data-tab="notes">Notes</a>
      </nav>
    </header>

    {{! Qualites Tab }}
    <div class="tab tab-qualites flexcol" data-group="primary" data-tab="qualites">
        {{> "systems/cabinet/templates/sheets/partials/esprit-qualites.hbs"}}
    </div>
    {{! Concept Tab }}
    <div class="tab tab-concept flexcol" data-group="primary" data-tab="concept">
       {{> "systems/cabinet/templates/sheets/partials/esprit-concept.hbs"}}
    </div>

    {{! Périsprit Tab }}
    <div class="tab tab-pouvoirs flexcol" data-group="primary" data-tab="pouvoirs">
        {{> "systems/cabinet/templates/sheets/partials/esprit-pouvoirs.hbs"}}
    </div>

    {{! Actions Tab }}
    <div class="tab tab-actions flexcol" data-group="primary" data-tab="actions">
       {{> "systems/cabinet/templates/sheets/partials/esprit-actions.hbs"}}
    </div>

    {{! Notes Tab }}
    <div class="tab tab-notes flexcol" data-group="primary" data-tab="notes">
       {{> "systems/cabinet/templates/sheets/partials/tab-notes.hbs"}}
    </div>

  </section>

</form>