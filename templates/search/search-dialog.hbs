<div class="search_dialog {{cssClass}}">
  <h3>{{localize "CDM.SEARCHTOOL.dialog_title"}}</h3>
  <label for="searchtext">{{localize "CDM.SEARCHTOOL.dialog_input"}}</label>
  <input name="searchtext" type="text" />
  <div class="dialog-buttons">
    {{#each buttons as |button id|}}
      <button class="dialog-button {{cssClass}}" data-button="{{id}}" {{disabled button.disabled}}>
        {{{button.icon}}}
        {{{button.label}}}
      </button>
    {{/each}}
  </div>
</div>