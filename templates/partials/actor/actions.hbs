<div class="actions-grid">
    {{#each actions as |action|}}
        {{log 'action' this}}
        <div class="actions-ligne">
            <p class="nom-action">{{action.name}}</p>
            <p>
                <span class="resolution" data-tooltip="{{action.system.labels.base}}">
                    <i class="dice_cab"></i>
                    <span style="text-transform: capitalize;">{{action.system.labels.qualite}}</span> + <em><span style="text-transform: capitalize;">{{action.system.labels.aspect}}</span></em>
                    {{#if action.system.hasAttribut}}
                        (+ <span style="text-transform: capitalize;">{{action.system.labels.attribut}}</span>)
                    {{/if}}
                </span>
            </p>
            <p>{{{action.system.circonstances}}}</p>    
           <div class="icon-group">
          {{#if ../editable}}
          <a class="item-control item-edit" data-field="{{action._id}}" data-tooltip="Modifier"><i
                  class="fas fa-cog"></i></a>
          <a class="item-control item-delete" data-field="{{action._id}}" data-tooltip="Supprimer"><i
                  class="fas fa-trash"></i></a>
          {{/if}}
        </div>     
        </div>
    {{/each}}
</div>